{
  "name": "@owja/i18n",
  "version": "1.0.0-alpha.1",
  "description": "lightweight internationalization library for javascript",
  "main": "dist/i18n.js",
  "module": "dist/i18n.module.js",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "keywords": [
    "typescript",
    "internationalization",
    "i18n",
    "javascript",
    "translation",
    "translating"
  ],
  "scripts": {
    "prepack": "npm run test && npm run lint && npm run prettier && npm run build",
    "build": "rm -rf dist && microbundle --format es,cjs",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu jest",
    "lint": "eslint --ext .ts,.js ./src",
    "lint:fix": "eslint --ext .ts,.js ./src --fix",
    "prettier": "prettier \"src/**/*.ts\" --check",
    "prettier:fix": "prettier \"src/**/*.ts\" --write"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/owja/i18n.git"
  },
  "bugs": {
    "url": "https://github.com/owja/i18n/issues"
  },
  "homepage": "https://github.com/owja/i18n",
  "author": "Hauke Broer <info@owja.de>",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^3.0.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-jest": "^23.8.2",
    "full-icu": "^1.3.1",
    "jest": "^25.3.0",
    "microbundle": "^0.11.0",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "mangle": {
    "regex": "^_"
  },
  "files": [
    "/dist",
    "/src"
  ]
}
